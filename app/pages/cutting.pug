include ../blocks/servicesNav
include ../blocks/footer
include ../blocks/servicePopup

doctype html
html(lang="ru")
    head
        meta(charset="utf-8")    
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name="description" content="Профессиональные услуги по спиливанию аварийных деревьев. Специалисты с опытом работы с 2017 года.")
        title Услуги по спиливанию деревьев | Лесозаготовительная компания
        //- Preload critical resources
        link(rel="preload" href="../../css-min/style.min.css" as="style")
        link(rel="preload" href="../js-bundle/service.bundle.js" as="script")
        // default css
        link(rel="stylesheet" href="../../css-min/default.min.css")
        // normalize css
        link(rel="stylesheet" href="../../css-min/normalize.min.css")
        // style css
        link(rel="stylesheet" href="../../css-min/style.min.css")
        // fonts
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet")
        
body  
    .page(itemscope itemtype="https://schema.org/WebPage")
        +servicesNav
        main.service(itemscope itemtype="https://schema.org/Service")
            .service__inner
                .service__welcome
                    .service__welcome-title Услуги по спиливанию деревьев
                    .service__welcome-subtitle Безопасное удаление деревьев любой сложности — быстро, чисто и без повреждений
                    .welcome__button-inner
                        a.welcome__button.button(href="#blockFeedback" role="button" aria-label="Рассчитать стоимость услуг") Рассчитать стоимость
        +servicePopup  
    script(src="../js-bundle/service.bundle.js" defer)